<mvc:View
	controllerName="sap.m.sample.sampleapp4.controller.View0"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page id="rootControl" title="Fiori app launchpad">
	<Panel headerText="Use-cases" expandable="true" expanded="true">
	<GenericTile id="t-todo" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="Todo notes app"
		subheader="A simple todo notes with status tracking" press="press">
		<TileContent>
						<content>
			<VBox>
			<ImageContent src="sap-icon://activities" />
									<BusyIndicator
				class="sapUiSmallMarginBottom" id = "todo" visible="{/todo}"/>
			</VBox>
			</content>

		</TileContent>
	</GenericTile>

	
	
			<GenericTile id="t-qr" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="QR scanner app"
		subheader="Scan QR codes through Fiori" press="press">
		<TileContent>
		
						<content>
						<VBox>
			<ImageContent src="sap-icon://qr-code" />
									<BusyIndicator
				class="sapUiSmallMarginBottom" id = "qr" visible="{/qr}"/>
				</VBox>
			</content>
		</TileContent>
	</GenericTile>
	
				<GenericTile id="t-expensemgmt" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="Expense management app"
		subheader="Record, track, and monitor expenditures" press="press">
		<TileContent>
		
						<content>
						<VBox>
			<ImageContent src="sap-icon://expense-report" />
									<BusyIndicator
				class="sapUiSmallMarginBottom" id = "expensemgmt" visible="{/expensemgmt}"/>
				</VBox>
			</content>
		</TileContent>
	</GenericTile>
	
	<GenericTile id="t-worklist" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="Worklist app"
		subheader="Worklist app with oData ops" press="press">
		<TileContent>
		
						<content>
						<VBox>
			<ImageContent src="sap-icon://expense-report" />
									<BusyIndicator
				class="sapUiSmallMarginBottom" id = "worklist" visible="{/worklist}"/>
				</VBox>
			</content>
		</TileContent>
	</GenericTile>
	
</Panel>

	<Panel headerText="Basic UI demos" expandable="true" expanded="true">

	<GenericTile id="t-masterdetail" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="Master-Detail app"
		subheader="Master detail app that adjusts layout accordingly" press="press">
		<TileContent>
		<content>
		<VBox>
			<ImageContent src="sap-icon://screen-split-one" />
				<BusyIndicator
				class="sapUiSmallMarginBottom" id = "masterdetail" visible="{/masterdetail}"/>
			
		</VBox>
		</content>
		</TileContent>
		
		
		
	</GenericTile>
		<GenericTile id="t-pdf" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="PDF display app"
		subheader="Show documents directly from backend ERP" press="press">
		<TileContent>
		
						<content>
						<VBox>
			<ImageContent src="sap-icon://pdf-attachment" />
									<BusyIndicator
				class="sapUiSmallMarginBottom" id = "pdf" visible="{/pdf}"/>
				</VBox>
			</content>
		</TileContent>
	</GenericTile>
	
	
		<GenericTile id="rating" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="Leave a Rating !"
		subheader="All feedback appreciated :-)" press="onOpenDialog">

		<TileContent>
		
			<ImageContent src="sap-icon://favorite" />

		</TileContent>
	</GenericTile>

<GenericTile id="t-cardlayout" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="Notifications List" 
		subheader="A card layout list suited for notifications" press="press">

				<TileContent>
						<content>
			<VBox>
			<ImageContent src="sap-icon://ui-notifications" />
									<BusyIndicator
				class="sapUiSmallMarginBottom" id = "cardlayout" visible="{/cardlayout}"/>
			</VBox>
			</content>

		</TileContent>
		
	</GenericTile>
	

			<GenericTile id="t-table" class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" 
	header="Fiori Table"
		subheader="Fiori table control with data from backend" press="press" >
		<TileContent>
						<content>
			<VBox>
			<ImageContent src="sap-icon://table-view" />
									<BusyIndicator
				class="sapUiSmallMarginBottom" id = "table" visible="{/table}"/>
			</VBox>
			</content>

		</TileContent>
	</GenericTile>
	</Panel>
	</Page>
</mvc:View>
