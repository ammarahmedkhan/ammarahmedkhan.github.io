<mvc:View
		controllerName="sap.m.sample.sampleapp4.controller.View4"
		class="sapUiBodyBackground sapContrastPlus"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:form="sap.ui.layout.form"
		xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		xmlns="sap.m">

	<l:VerticalLayout
			class="sapUiContentPadding"
			width="100%">
		<l:content>
		<Page>
			<content>
			<SplitApp id = "id1">
			<detailPages>
			<Page id = "detail" showNavButton = "true" navButtonPress="navButtonPress">
			<content>
			
	<ScrollContainer id="containerForm"
					width="100%"
					horizontal="false"
					vertical="false">
		<form:SimpleForm
			layout="ResponsiveGridLayout"
			editable="true"
			title="Form nested">
			<Label id="labelInForm"
			displayOnly="true" 
			wrapping="true" 
			text="Title"/>
			<Input value="{Title}"></Input>
		</form:SimpleForm>
	</ScrollContainer>
	<Panel id="containerLayout"
				headerText="Panel Nested"
				width="100%">
		<Label id="label"
				labelFor="containerInput"
				displayOnly="true"
				wrapping="true"
				text="FirstName"/>
		<Input  value="{FirstName}" ></Input>
	</Panel>
	<MessageStrip
		class="sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
		type="Warning"
		text='The service used for this is the Northwind OData service' />
			
			</content>
			</Page>
			</detailPages>
			<masterPages>
						<Page title = "List" id = "master"
						 showNavButton="true" navButtonType="Back" 
                             navButtonPress="onBack">
			<content>
			<List id = "list"
			items = "{/value}"
			
			>
			<StandardListItem
			        title = "{FirstName}"
                    description =  "{LastName}"
					type = "Active"
					custom:to="detail"
					press="onListItemPress"
			/>
			</List>			
			</content>
			</Page>
			</masterPages>
			</SplitApp>
			</content>
		</Page>
		</l:content>
	</l:VerticalLayout>
		
</mvc:View>


