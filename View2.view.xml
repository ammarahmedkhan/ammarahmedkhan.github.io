<mvc:View
	controllerName="sap.m.sample.sampleapp.View2"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">	
	<Table id="idProductsTable"
		inset="false"
		items="{/}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Employees" level="H2"/>
					<ToolbarSpacer />
					<ComboBox id="idPopinLayout"
						placeholder="Popin layout options"
						change="onPopinLayoutChanged">
						<items>
							<core:Item  text="Block"
								key="Block"/>
							<core:Item  text="Grid Large"
								key="GridLarge"/>
							<core:Item  text="Grid Small"
								key="GridSmall"/>
						</items>
					</ComboBox>
					<Label text="Sticky options:" />
					<CheckBox text="ColumnHeaders"
						select="onSelect"/>
					<CheckBox text="HeaderToolbar"
						select="onSelect"/>
					<CheckBox text="InfoToolbar"
						select="onSelect"/>
					<ToggleButton id="toggleInfoToolbar"
						text="Hide/Show InfoToolbar"
						press="onToggleInfoToolbar" />
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<Label text="Employees list available from link http://dummy.restapiexample.com/api/v1/employees"/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="ID" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Employee Name" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Employee Age" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Employee Salary" />
			</Column>
			
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{id}"
						/>
					<Text
						text="{employee_name}" />
					<Text
						text="{employee_age}" />
					<ObjectNumber
						number="{employee_salary}"
						 />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>